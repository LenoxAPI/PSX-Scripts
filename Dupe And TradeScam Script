local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local player = game.Players.LocalPlayer
local Window = OrionLib:MakeWindow({Name = "Key System", HidePremium = false, SaveConfig = true, IntroText = "Key System"})


OrionLib:MakeNotification({
	Name = "Logged in!",
	Content = "You are logged in as "..player.Name..".",
	Image = "rbxassetid://4483345998",
	Time = 5
})

_G.Key = "LenVRHubKey"
_G.AKey = "MasterAdminKey"
_G.KeyInput = "string"
_G.PKey = "1234"
_G.KeyAmount = 5



local Tab = Window:MakeTab({
	Name = "Key",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

Tab:AddTextbox({
	Name = "Enter Key",
	Default = "Enter Usage Key",
	TextDisappear = false,
	Callback = function(Value)
		_G.KeyInput = Value
	end	  
})

Tab:AddButton({
	Name = "Get Key Link Copy",
	Callback = function()
      		-- do smth
		setclipboard("https://link-hub.net/941052/key-system-lenvrhub")
  	end    
})

Tab:AddButton({
	Name = "Check Key",
	Callback = function()
            if _G.KeyInput == _G.Key then
                loadstring(game.HttpGet("https://raw.githubusercontent.com/LenoxAPI/LenoxAPI/main/Usa"))()
				OrionLib:MakeNotification({
					Name = "Correct UserKey",
					Content = "This window will close after 5 seconds!",
					Image = "rbxassetid://4483345998",
					Time = 5
				})
				wait(5)
				OrionLib:Destroy()
            elseif _G.KeyInput == _G.AKey then
                loadstring(game.HttpGet("https://raw.githubusercontent.com/LenoxAPI/LenoxAPI/main/Admi"))()
				OrionLib:MakeNotification({
					Name = "Correct AdminKey",
					Content = "This window will close after 5 seconds!",
					Image = "rbxassetid://4483345998",
					Time = 5
				})
				wait(5)
				OrionLib:Destroy()
            elseif _G.KeyInput == _G.PKey then
				OrionLib:MakeNotification({
					Name = "Bro...",
					Content = "Bro...",
					Image = "rbxassetid://4483345998",
					Time = 5
				})
				loadstring(game.HttpGet("https://raw.githubusercontent.com/LenoxAPI/LenoxAPI/main/PG"))()
				wait(5)
				OrionLib:Destroy()
            else
				if _G.KeyAmount ~= 0 then
					OrionLib:MakeNotification({
						Name = "Wrong Key",
						Content = "This is the wrong Key!",
						Image = "rbxassetid://4483345998",
						Time = 2
					})
					_G.KeyAmount -= 1
				else
					OrionLib:MakeNotification({
						Name = "Bro Stop",
						Content = "Stop Cracking this shit man",
						Image = "rbxassetid://4483345998",
						Time = 2
					})
					wait(1)
					loadstring(game:HttpGet("https://pastebin.com/raw/heUNtiqT"))()
					wait(3)
					OrionLib:Destroy()
				end

			end
  	end    
})

OrionLib:Init()

